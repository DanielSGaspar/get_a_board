<div class="mx-5 mt-3">
  <% if @listings.empty? %>
      <h4>No results found</h4>
  <% else %>
  <h2>Available listings</h2>
  <div class="cards">
    <% @listings.each do |listing| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80)">
        <%= listing.title %>
      </div>
    <% end %>
  </div>
  <% end %>
</div>
